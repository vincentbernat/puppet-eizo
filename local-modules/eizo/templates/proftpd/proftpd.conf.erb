# Modules
LoadModule mod_sftp.c

UseIPv6                 on

ServerName              <%= @hostname %>
ServerType              standalone
DefaultServer           on

User                    proftpd
Group                   nogroup

Port                    <%= @port %>
SFTPEngine              on
SFTPLog                 /var/log/proftpd/sftp.log
TransferLog             /var/log/proftpd/sftp-xferlog

# Host Keys (same as SSH)
SFTPHostKey             /etc/ssh/ssh_host_rsa_key
SFTPHostKey             /etc/ssh/ssh_host_dsa_key
SFTPHostKey             /etc/ssh/ssh_host_ecdsa_key

# Auth methods
AuthOrder               mod_auth_file.c
AuthUserFile            /etc/proftpd/users
SFTPAuthMethods         publickey
SFTPAuthorizedUserKeys  file:/etc/proftpd/users.keys/%u
DefaultRoot             ~
RequireValidShell       off

# Read-only users
DirFakeMode             0444
DirFakeGroup            on ftp
DirFakeUser             on ftp
<Limit WRITE>
  DenyAll
</Limit>

# Limit bandwidth
<% if @shaper -%>
LoadModule mod_shaper.c
ShaperEngine on
ShaperTable /run/proftpd/shapertable
ShaperAll <% @shaper.each do |key,val| %><%= key %> <%= val %> <% end %>
<% end -%>

# Enable remote control
ControlsEngine        on
ControlsACLs          all allow user proftpd
ShaperControlsACLs    all allow user proftpd
ControlsMaxClients    2
ControlsLog           /var/log/proftpd/controls.log
ControlsInterval      5
ControlsSocket        /run/proftpd.sock
ControlsSocketACL     allow user proftpd
