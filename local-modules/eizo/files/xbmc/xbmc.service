[Unit]
Description = XBMC Media Center
After = remote-fs.target
After = syslog.target
 
[Service]
Type = simple
Restart = always
RestartSec = 15
ExecStart = /usr/local/bin/xbmc-start
ExecStop = /usr/local/bin/xbmc-stop
TTYPath = /dev/tty9
StandardInput = tty
StandardOutput = journal
ConditionFileNotEmpty = /sys/class/drm/card0/card0-HDMI-A-3/edid

[Install]
WantedBy = xbmc.target
